<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.victoryspace.vics.likes.query.mapper.LikesQueryMapper">
    <resultMap id="LikesResultMap"
               type="com.victoryspace.vics.likes.query.dto.LikesQueryDTO">
        <result property="id" column="id"/>
        <result property="voteId" column="vote_id"/>
        <result property="memberId" column="member_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAll" resultMap="LikesResultMap">
        SELECT id,
               vote_id,
               member_id,
               created_at
        FROM `likes`
    </select>

    <select id="findById" resultMap="LikesResultMap">
        SELECT id,
               vote_id,
               member_id,
               created_at
        FROM `likes`
        WHERE id = #{id}
    </select>

    <select id="findByVoteId" resultMap="LikesResultMap">
        SELECT id,
               vote_id,
               member_id,
               created_at
        FROM `likes`
        WHERE vote_id = #{voteId}
    </select>

    <select id="findByMemberId" resultMap="LikesResultMap">
        SELECT id,
               vote_id,
               member_id,
               created_at
        FROM `likes`
        WHERE member_id = #{memberId}
    </select>
</mapper>