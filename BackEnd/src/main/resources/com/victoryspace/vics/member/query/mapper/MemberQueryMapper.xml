<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.victoryspace.vics.member.query.mapper.MemberQueryMapper">
    <resultMap id="MemberResultMap"
               type="com.victoryspace.vics.member.query.dto.MemberQueryDTO">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="nickname" column="nickname"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deletedAt" column="deleted_at"/>
        <result property="gradeId" column="grade_id"/>
        <result property="profile" column="profile"/>
        <result property="point" column="point"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="findAll" resultMap="MemberResultMap">
        SELECT id,
               name,
               gender,
               birthday,
               nickname,
               password,
               email,
               created_at,
               updated_at,
               deleted_at,
               grade_id,
               profile,
               point,
               role
        FROM member
    </select>

    <select id="findById" resultMap="MemberResultMap">
        SELECT id,
               name,
               gender,
               birthday,
               nickname,
               password,
               email,
               created_at,
               updated_at,
               deleted_at,
               grade_id,
               profile,
               point,
               role
        FROM member
        WHERE id = #{id}
    </select>

    <select id="findByNickname" resultMap="MemberResultMap">
        SELECT id,
               name,
               gender,
               birthday,
               nickname,
               password,
               email,
               created_at,
               updated_at,
               deleted_at,
               grade_id,
               profile,
               point,
               role
        FROM member
        WHERE nickname LIKE CONCAT('%', #{nickname}, '%')
    </select>

    <select id="findByEmail" resultMap="MemberResultMap">
        SELECT id,
               name,
               gender,
               birthday,
               nickname,
               password,
               email,
               created_at,
               updated_at,
               deleted_at,
               grade_id,
               profile,
               point,
               role
        FROM member
        WHERE email = #{email}
    </select>

    <select id="orderByPoint" resultMap="MemberResultMap">
        SELECT id,
        name,
        gender,
        birthday,
        nickname,
        password,
        email,
        created_at,
        updated_at,
        deleted_at,
        grade_id,
        profile,
        point,
        role
        FROM member
        <choose>
            <when test="direction == 'asc'">
                ORDER BY point ASC
            </when>
            <otherwise>
                ORDER BY point DESC
            </otherwise>
        </choose>
    </select>
</mapper>