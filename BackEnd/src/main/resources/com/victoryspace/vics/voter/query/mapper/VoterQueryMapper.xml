<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.victoryspace.vics.voter.query.mapper.VoterQueryMapper">
    <resultMap id="VoterResultMap"
               type="com.victoryspace.vics.voter.query.dto.VoterQueryDTO">
        <result property="id" column="id"/>
        <result property="voteId" column="vote_id"/>
        <result property="memberId" column="member_id"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="findAll" resultMap="VoterResultMap">
        SELECT id,
               vote_id,
               member_id,
               content
        FROM voter
    </select>

    <select id="findById" resultMap="VoterResultMap">
        SELECT id,
               vote_id,
               member_id,
               content
        FROM voter
        WHERE id = #{id}
    </select>

    <select id="findByVoteId" resultMap="VoterResultMap">
        SELECT id,
               vote_id,
               member_id,
               content
        FROM voter
        WHERE vote_id = #{voteId}
    </select>

    <select id="findByMemberId" resultMap="VoterResultMap">
        SELECT id,
               vote_id,
               member_id,
               content
        FROM voter
        WHERE member_id = #{memberId}
    </select>

    <select id="findByVoteAndMemberId" resultMap="VoterResultMap">
        SELECT id,
               vote_id,
               member_id,
               content
        FROM voter
        WHERE vote_id = #{voteId}
        AND member_id = #{memberId}
    </select>
</mapper>